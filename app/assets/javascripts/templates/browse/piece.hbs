{{#piece}}
  <article class="exhibition_piece piece_{{downcase type}}" id="exhibition_piece_{{id}}">
    {{# if ../piece_text}}
      <h1>{{piece.title}}</h1>
      {{simple_format piece.content}}
    {{/if}}

    {{#if ../piece_page}}
      {{#if piece.urls.cached}}
        <div class="loading_page">
          <i class="icon-minus loading_icon"></i>
          <h3>Page is loading. Please wait.</h3>
        </div>
        <iframe id="exhibition_piece_iframe" src="{{piece.urls.cached}}" width="100%" height="100%" framespacing="0" frameborder="0"></iframe>
      {{else}}
        <p>Sorry, this page is not available for viewing.</p>
      {{/if}}
    {{/if}}
  </article>
{{/piece}}