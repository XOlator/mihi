!!!
%html
  %head
    %title MIHI
    = stylesheet_link_tag    "application", "exhibitions", media: "all"#, "data-turbolinks-track" => true
    = javascript_include_tag "application"#, "data-turbolinks-track" => true
    = csrf_meta_tags

    - if true
      - # FACEBOOK OPENGRAPH
      - #%meta{:property => "fb:admins", :content => "7002294"}
      %meta{:property => "og:type", :content => "website"}
      %meta{:property => "og:url", :content => (@meta_canonical_url || root_url)}
      %meta{:property => "og:title", :content => @meta_title || ''}
      %meta{:property => "og:description", :content => (@meta_description || '')}
      %meta{:property => "og:image", :content => (@meta_image || '')}

      - # TWITTER CARDS
      %meta{:name => "twitter:site", :content => "@InteriorDesign"}
      %meta{:name => "twitter:card", :content => "summary"}
      %meta{:name => "twitter:url", :content => (@meta_canonical_url || root_url)}
      %meta{:name => "twitter:title", :content => (@meta_title || '')}
      %meta{:name => "twitter:description", :content => (@meta_description || '')}
      %meta{:name => "twitter:image", :content => (@meta_image || '')}

      - # GOOGLE +1
      %meta{:itemprop => "name", :content => (@meta_title || '')}
      %meta{:itemprop => "description", :content => (@meta_description || '')}
      %meta{:itemprop => "image", :content => (@meta_image || '')}



  %body.browse_exhibition
    #content
      = yield

    %footer#footer
      %p
        %small &copy; #{Date.today.year} X&O Accelerator Company LLC. Support by Eyebeam.